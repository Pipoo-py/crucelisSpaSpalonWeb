---
	import "../styles/global.css"
	import { Header } from "../components/Header.jsx"
	import Footer from "../components/Footer.astro"
	const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="manifest" href="/site.webmanifest">
		<link rel="preload" href="/fonts/Great_Vibes/GreatVibes-Regular.ttf" as="font" type="font/ttf" crossorigin />
		<link rel="preload" href="/fonts/Lato/Lato-Regular.ttf" as="font" type="font/ttf" crossorigin />
		<link rel="canonical" href={canonicalURL} />
		<meta name="title" content="Crucelis Spa & Salón" />
		<meta name="description" content="Salón de Spa de Crucelis Lizardiz, ubicado en Lima, Distrito El Chorrillo, Perú. Ofrece múltiples servicios de manicure, pedicure, etc..." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content="Crucelis Spa & Salón" />
		<meta property="og:description" content="Salón de Spa de Crucelis Lizardiz, ubicado en Lima, Distrito El Chorrillo, Perú. Ofrece múltiples servicios de manicure, pedicure, etc..." />
		<title>Crucelis Spa & Salón</title>
	</head>
	<body>
		<Header client:load/>
			<slot />
		<Footer />
	</body>
</html>
