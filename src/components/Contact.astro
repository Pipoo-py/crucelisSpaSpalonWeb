---
  import InstagramIcon from '@mui/icons-material/Instagram';
  import WhatsAppIcon from '@mui/icons-material/WhatsApp';
---


<section class="contact-section" id="contacto">

  <div class="contact__container">
    <h2> Contacto </h2>
    <ul class="contact__ul">
      <li>
        <InstagramIcon 
          sx={{ color: "#f2f1ef", fontSize: "2rem"}}
          class="social-icon"/>
        <a href="https://www.instagram.com/crucelispasalon/">Instagram</a>
      </li>
      <li>
        <WhatsAppIcon 
          sx={{ color: "#f2f1ef", fontSize: "2rem"}}
          class="social-icon"/>
        <a href="https://wa.me/51979289185">WhatsApp</a>
      </li>
    </ul>
  </div>
</section>

<style>
  .contact-section{
    background-image: url("../assets/other/contact.webp");
    background-position: top;
    object-fit: cover;
    height: 50dvh;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-content: center;
    background-attachment: fixed;
  }

  .contact__container h2{
    color: var(--second-color);
    position: relative;
    z-index: 5;
    animation-timeline: view();
    animation-name: viewElement;
    animation-range: cover 0% cover 40%;
  }

  .contact-section::before{
		content: "";
		width: 100%;
		height: 100%;
		background-color: #000c;
		position: absolute;
		top: 0;
  }

  .contact__container{
    position: relative;
    margin: 0 auto;
    z-index: 5;
  }

  .contact__ul li{
    list-style: none;
    display: flex;
    justify-content: center;
    align-content: center;
    gap: 1.5rem;
    margin: 14px 0;
  }

  .contact__ul li a{
    font-size: 1.2rem;
    color: var(--second-color);
    text-decoration: none;
  }

  .social-icon{
    color: var(--second-color);
  }
</style>
